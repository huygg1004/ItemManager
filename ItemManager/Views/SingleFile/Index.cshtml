@model ItemManager.Models.LacosteFile

@{
    ViewData["Title"] = "Index";
}

<h1>Lacoste Item Master Manager</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Index" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="File" class="control-label"></label>
                <input type="file" name="file" />
            </div>
            <div class="form-group">
                <input type="submit" value="Upload file for Processing to DB" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@if (TempData["MsgChangeStatus"] != null)
{
    <h4 class="text-danger">@Html.Raw(TempData["MsgChangeStatus"])</h4>
}



<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
